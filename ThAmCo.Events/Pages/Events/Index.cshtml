@page
@model ThAmCo.Events.Pages.Events.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].DateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].ReservationReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].VenueCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].GuestCount)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Event)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationReference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GuestCount)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.EventId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.EventId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.EventId">Delete</a> |
                    <a asp-page="./ReserveVenue" asp-route-id="@item.EventId">Reserve Venue</a>
                </td>
            </tr>
        }

    </tbody>
</table>