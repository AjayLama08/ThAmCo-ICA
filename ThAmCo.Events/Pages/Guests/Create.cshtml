@page
@model ThAmCo.Events.Pages.Guest.CreateModel

@{
    ViewData["Title"] = "Create Guest";
}

<h1 class="mb-4">Create New Guest</h1>

<h4>Guest Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- First Name -->
            <div class="form-group">
                <label asp-for="Guest.FirstName" class="control-label"></label>
                <input asp-for="Guest.FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <label asp-for="Guest.LastName" class="control-label"></label>
                <input asp-for="Guest.LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="Guest.LastName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Guest.Email" class="control-label"></label>
                <input asp-for="Guest.Email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Guest.Email" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create Guest" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Back Link -->
<div>
    <a asp-page="Index" class="btn btn-secondary">Back to Guest List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
