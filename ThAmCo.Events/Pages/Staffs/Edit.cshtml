@page
@model ThAmCo.Events.Pages.Staffs.EditModel

@{
    ViewData["Title"] = "Edit Staff";
}

<h1 class="mb-4">Edit Staff</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden Field for Staff ID -->
            <input type="hidden" asp-for="Staff.StaffId" />

            <!-- First Name -->
            <div class="form-group mb-3">
                <label asp-for="Staff.FirstName" class="form-label"></label>
                <input asp-for="Staff.FirstName" class="form-control" />
                <span asp-validation-for="Staff.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group mb-3">
                <label asp-for="Staff.LastName" class="form-label"></label>
                <input asp-for="Staff.LastName" class="form-control" />
                <span asp-validation-for="Staff.LastName" class="text-danger"></span>
            </div>

            <!-- Is First Aider -->
            <div class="form-group mb-4">
                <label asp-for="Staff.IsFirstAider" class="form-label"></label>
                <select asp-for="Staff.IsFirstAider" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Staff.IsFirstAider" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
