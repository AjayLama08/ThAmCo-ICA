@page
@model ThAmCo.Events.Pages.EventGuests.CreateModel

@{
    ViewData["Title"] = "Create Guest Booking";
}

<h1 class="mb-4">Create Guest Booking</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Guest Booking Details</h4>
        <hr />
        <form method="post" class="needs-validation">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Event Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="GuestBooking.EventId" class="form-label"></label>
                <select asp-for="GuestBooking.EventId" class="form-select" asp-items="ViewBag.EventId"></select>
            </div>

            <!-- Guest Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="GuestBooking.GuestId" class="form-label"></label>
                <select asp-for="GuestBooking.GuestId" class="form-select" asp-items="ViewBag.GuestId"></select>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Create</button>
            </div>
        </form>
    </div>
</div>

<!-- Back to Event Details Link -->
<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-page="/Events/Details"
       asp-route-id="@(Model.GuestBooking?.EventId > 0 ? Model.GuestBooking.EventId : null)">
        <i class="bi bi-arrow-left"></i> Back to Event Details
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
