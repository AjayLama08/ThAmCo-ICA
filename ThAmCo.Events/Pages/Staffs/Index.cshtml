@page
@model ThAmCo.Events.Pages.Staffs.IndexModel

@{
    ViewData["Title"] = "Staff List";
}

<h1 class="mb-4">Staffs</h1>

<!-- Create New Staff Button -->
<p>
    <a asp-page="Create" class="btn btn-primary">Create New Staff</a>
</p>

<!-- Staffs Table -->
<div class="table-responsive">
    <table class="table table-striped table-bordered text-center align-middle">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].LastName)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staff)
        {
            <tr>
                <!-- First Name -->
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>

                <!-- Last Name -->
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <!-- Action Buttons -->
                <td class="text-center">
                    <a class="btn btn-sm btn-outline-primary" asp-page="./Edit" asp-route-id="@item.StaffId">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a class="btn btn-sm btn-outline-info" asp-page="./Details" asp-route-id="@item.StaffId">
                        <i class="bi bi-info-circle"></i> Details
                    </a>
                    <a class="btn btn-sm btn-outline-danger" asp-page="./Delete" asp-route-id="@item.StaffId">
                        <i class="bi bi-trash"></i> Delete
                    </a>
            </tr>
        }
    </tbody>
</table>
