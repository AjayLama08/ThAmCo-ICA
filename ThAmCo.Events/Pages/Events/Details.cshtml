@page
@model ThAmCo.Events.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "Index";
}

<h1>Event Details</h1>
<br />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventTypeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.DateAndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.DateAndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.FoodBookingId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.FoodBookingId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.ReservationReference)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.ReservationReference)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Event.EventId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<br />
<br />

<h3> Associated Guests</h3>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Attendance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var guest in Model.Guests)
        {
            <tr>
                <td>@guest.FirstName</td>
                <td>@guest.LastName</td>
                <td>@guest.Email</td>
                <td>
                    @if (guest.GuestBookings.Any(gb => gb.EventId == Model.Event.EventId && gb.HasAttended))
                    {
                        <span>Attended</span>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="RegisterAttendance">
                            <input type="hidden" name="eventId" value="@Model.Event.EventId" />
                            <input type="hidden" name="guestId" value="@guest.GuestId" />
                            <button type="submit">Register Attendance</button>
                        </form>
                    }
                </td>
                <td>
                    <a asp-page="/EventGuests/Remove" asp-route-EventId="@Model.Event.EventId" asp-route-GuestId="@guest.GuestId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<tbody>
    <tr>
        <td>
            <a asp-page="/EventGuests/Create" asp-route-eventId="@Model.Event.EventId">Add New Guest</a>
        </td>
    </tr>
</tbody>
<br />
<br />
<h3>Total Guests: @Model.Guests.Count</h3>