@page
@model ThAmCo.Events.Pages.Guest.DeleteModel

@{
    ViewData["Title"] = "Delete Guest";
}

<h1 class="mb-4">Delete Guest</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this guest?</h4>
    <p>This action cannot be undone. Please confirm your choice before proceeding.</p>
</div>

<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        GuestDetails
    </div>
    <div class="card-body">
    <dl class="row">
        <!-- First Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.FirstName)
        </dd>

        <!-- Last Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.LastName)
        </dd>

        <!-- Email -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.Email)
        </dd>
    </dl>
   </div>
</div>

    <form method="post">
        <input type="hidden" asp-for="Guest.GuestId" />

        <!-- Delete Button -->
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>

        <!-- Back Link -->
        <a asp-page="./Index" class="btn btn-secondary">Back to Guest List</a>
    </form>
</div>
