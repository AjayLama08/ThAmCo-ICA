@page
@model ThAmCo.Events.Pages.EventGuests.RemoveModel

@{
    ViewData["Title"] = "Delete Guest Booking";
}

<h1 class="mb-4">Delete Guest Booking</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this booking?</h4>
    <p>This action cannot be undone. Please confirm your choice before proceeding.</p>
</div>

<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        Guest Booking Details
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Has Attended</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.GuestBooking.HasAttended)</dd>

            <dt class="col-sm-3">Event</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.GuestBooking.Event.Title)</dd>

            <dt class="col-sm-3">Guest</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.GuestBooking.Guest.Email)</dd>
        </dl>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="GuestBooking.EventId" />
    <input type="hidden" asp-for="GuestBooking.GuestId" />

    <div class="d-flex">
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="/Events/Details" asp-route-id="@Model.GuestBooking.EventId" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</form>
