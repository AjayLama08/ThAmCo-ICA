@page
@model ThAmCo.Events.Pages.Events.DeleteModel

@{
    ViewData["Title"] = "Delete Event";
}

<h1 class="mb-4">Delete Event</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this event?</h4>
    <p>This action cannot be undone. Please confirm your choice before proceeding.</p>
</div>

<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        Event Details
    </div>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Event.EventTypeId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Event.EventTypeId)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Event.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Event.Title)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Event.DateAndTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Event.DateAndTime)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Event.FoodBookingId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Event.FoodBookingId)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Event.ReservationReference)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Event.ReservationReference)
            </dd>
        </dl>
</div>
        <form method="post" class="d-flex justify-content-start">
            <input type="hidden" asp-for="Event.EventId" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </form>
  

