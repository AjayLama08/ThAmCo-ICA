@page
@model ThAmCo.Events.Pages.EventStaffs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Event Staffs</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staffing[0].Event.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffing[0].Staff.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffing[0].Staff.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staffing) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.LastName)
            <td>
            <a asp-page="./Remove" asp-route-EventId="@item.EventId" asp-route-GuestId="@item.StaffId">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
