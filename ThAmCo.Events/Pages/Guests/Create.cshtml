@page
@model ThAmCo.Events.Pages.Guest.CreateModel

@{
    ViewData["Title"] = "Create Guest";
}

<h1 class="mb-4">Create New Guest</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Guest Details</h4>
        <hr />

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- First Name -->
            <div class="form-group mb-3">
                <label asp-for="Guest.FirstName" class="form-label">First Name</label>
                <input asp-for="Guest.FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group mb-3">
                <label asp-for="Guest.LastName" class="form-label">Last Name</label>
                <input asp-for="Guest.LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="Guest.LastName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Guest.Email" class="form-label">Email Address</label>
                <input asp-for="Guest.Email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Guest.Email" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="form-group d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
                <input type="submit" value="Create Guest" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
