@page
@model ThAmCo.Events.Pages.ReserveVenueModel
@{
    ViewData["Title"] = "Reserve Venue";
}

<h2>Available Venues</h2>

<form method="post">
    <input type="hidden" asp-for="EventId" />
    <table>
        <thead>
            <tr>
                <th>Venue Name</th>
                <th>Location</th>
                <th>Capacity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venue in Model.AvailableVenues)
            {
                    <tr>
                        <td>@venue.Name</td>
                        <td>@venue.Location</td>
                        <td>@venue.Capacity</td>
                        <td>
                            <button type="submit" asp-for="VenueId" value="@venue.Id">Reserve</button>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</form>