@page
@model ThAmCo.Events.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create Event";
}

<h1 class="mb-4">Create Event</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Event Details</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Event.EventTypeId" class="form-label"></label>
                <select asp-for="Event.EventTypeId" asp-items="Model.EventTypeItems" class="form-select">
                    <option value="">-- Select Event Type --</option>
                </select>
                <span asp-validation-for="Event.EventTypeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Event.Title" class="form-label"></label>
                <input asp-for="Event.Title" class="form-control" placeholder="Enter event title" />
                <span asp-validation-for="Event.Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Event.DateAndTime" class="form-label"></label>
                <input asp-for="Event.DateAndTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="Event.DateAndTime" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Create
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
