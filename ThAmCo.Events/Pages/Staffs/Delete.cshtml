@page
@model ThAmCo.Events.Pages.Staffs.DeleteModel

@{
    ViewData["Title"] = "Delete Staff";
}

<h1 class="mb-4">Delete Staff</h1>

<div class="alert alert-warning" role="alert">
    <h3 class="alert-heading">Are you sure you want to delete this staff member?</h3>
    <p>Deleting this staff member will remove them permanently from the system.</p>
</div>

<div>
    <h4>Staff Details</h4>
    <hr />
    <dl class="row">
        <!-- First Name -->
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Staff.FirstName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Staff.FirstName)
        </dd>

        <!-- Last Name -->
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Staff.LastName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Staff.LastName)
        </dd>
    </dl>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Staff.StaffId" />
        <!-- Delete Button -->
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <!-- Back to List Button -->
        <a asp-page="./Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>
