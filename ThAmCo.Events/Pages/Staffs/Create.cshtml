@page
@model ThAmCo.Events.Pages.Staffs.CreateModel

@{
    ViewData["Title"] = "Create Staff";
}

<h1 class="mb-4">Create New Staff Member</h1>

<h4>Staff Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- First Name -->
            <div class="form-group mb-3">
                <label asp-for="Staff.FirstName" class="form-label"></label>
                <input asp-for="Staff.FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="Staff.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group mb-3">
                <label asp-for="Staff.LastName" class="form-label"></label>
                <input asp-for="Staff.LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="Staff.LastName" class="text-danger"></span>
            </div>

            <!-- Is First Aider -->
            <div class="form-group mb-4">
                <label asp-for="Staff.IsFirstAider" class="form-label"></label>
                <select asp-for="Staff.IsFirstAider" class="form-select">
                    <option value="">Select an option</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Staff.IsFirstAider" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Create
                </button>
                <a asp-page="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
