@page
@model ThAmCo.Events.Pages.Guests.AnonymiseModel
@{
    ViewData["Title"] = "Anonymise Guest";
}

<h2>Anonymise Guest</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="GuestId" class="control-label"></label>
        <input asp-for="GuestId" class="form-control" />
        <span asp-validation-for="GuestId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Anonymise</button>
</form>
