@page
@model ThAmCo.Events.Pages.Staffs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Staff Details</h1>

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.StaffId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.StaffId)
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.LastName)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Staff.IsFirstAider)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Staff.IsFirstAider)
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Staff.StaffId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<br />
<br />
<h3>Associated Events</h3>
<table class="table">
    <thead>
        <tr>
            <th>EventType</th>
            <th>Title</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventStaff in Model.Staffings)
        {
            <tr>
                <td>@eventStaff.Event.EventTypeId</td>
                <td>@eventStaff.Event.Title</td>
                <td>@eventStaff.Event.DateAndTime.ToShortDateString()</td>
            </tr>
        }
    </tbody>
 </table>
 <br />
 <br />
 <h5> Total Events: @Model.eventCount</h5>

